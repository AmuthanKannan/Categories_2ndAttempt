<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardBackgroundColor="@color/amulight"
        card_view:cardCornerRadius="30dp"
        card_view:cardElevation="2dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/twDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Tasty Homemade Malayam"
                android:textSize="14sp"
                card_view:layout_constraintBottom_toTopOf="@id/tvMisc"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintStart_toStartOf="@id/twTitle"
                card_view:layout_constraintTop_toBottomOf="@id/twTitle" />

            <TextView
                android:id="@+id/twTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Malayalam Food"
                android:textColor="@color/amudark"
                android:textSize="24sp"
                card_view:layout_constraintBottom_toTopOf="@id/twDesc"
                card_view:layout_constraintLeft_toRightOf="@id/iw1"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEMPORARILY CLOSED"
                android:textSize="12sp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintStart_toStartOf="@id/tvMisc"
                card_view:layout_constraintTop_toBottomOf="@id/tvMisc" />

            <TextView
                android:id="@+id/tvMisc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aalandur"
                android:textSize="14sp"
                card_view:layout_constraintBottom_toTopOf="@id/tvRating"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintStart_toStartOf="@id/twDesc"
                card_view:layout_constraintTop_toBottomOf="@id/twDesc" />

            <ImageView
                android:id="@+id/iw1"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:tint="@color/amudark"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintHorizontal_bias="0.28"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toLeftOf="@id/twTitle"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:srcCompat="@drawable/foodplaceholder" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>


